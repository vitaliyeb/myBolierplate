body
  background-image url('/images/bg.png')
  margin-bottom 16px
  background-size cover
  @media(max-width 768px)
    background-image url('/images/bg_phone.png')
*
  margin 0
  font-size 16px
  font-family 'Roboto', sans-serif
  font-style normal
  text-decoration none
h1, h2
  font-family 'Montserrat', sans-serif

ul
  list-style none
  padding 0
  margin 0
.container
  max-width 1030px
  box-sizing border-box
  padding 0 10px
  width 100%
  margin 0 auto
.header
  width 100%
  position fixed
  top 0
  z-index 10
  align-items center
  height 100px
  background-color #fff
  display flex
  box-shadow 0px 3px 5px rgba(0, 0, 0, 0.2), 0px 1px 18px rgba(0, 0, 0, 0.12), 0px 6px 10px rgba(0, 0, 0, 0.14)
  @media (max-width: 768px)
    height 60px
  @media (max-width: 360px)
    height 56px
  &__link
    color #000
    &_active
      font-weight bold
    & > span
      &:last-child
        display none
        @media(max-width 520px)
          display inline-block
      &:first-child
        @media(max-width 520px)
          display none
  &__container
    display flex
    justify-content space-between
  &__address
    display flex
    align-items center
  @media (max-width: 900px)
    &__address
      display none
  &__navigate
    display flex
    max-width 703px
    width  100%
    justify-content space-between
    @media (max-width: 900px)
      max-width 100%
  &__phone
    margin-left 5px
    font-weight bold
    color: #6A8DC3;
  &__list
    display flex
    width 100%
    justify-content space-between
    align-items center

.consultation
  padding-top 100px
  margin-top 130px
  @media(max-width 768px)
    padding-top 60px
    margin-top 50px
  @media(max-width 768px)
    padding-top 55
    margin-top 35px
  &__heading
    font-size 48px
    color #000
    font-weight 800
    line-height 60px
  &__wrapper
    display flex
    overflow hidden
    justify-content space-between
    @media(max-width 790px)
      flex-wrap wrap
      overflow visible
  &__image
    position relative
    z-index 2
    width 100%
    &-wrapper
      max-width 449px
      position relative
      width 100%
      margin-left 30px
      @media(max-width 768px)
        &:before
          content ''
          position absolute
          display block
          background-image url("/images/Vector.png")
          right -7px
          background-repeat no-repeat
          background-size cover
          height 750px
          width 113%
          background-position-y -207px
          @media(max-width 460px)
            background-position-y -156px
      @media(max-width 790px)
        margin-left auto
  &__info
    max-width 450px
    width 100%
    margin-top 40px
    @media(max-width 768px)
      margin-top 15px
  &__note
    display flex
    align-items center
    margin-top 10px
    &-image
      width 40px
      margin-right 15px
      height 40px
      @media(max-width 768px)
        width 24px
        height 24px
    &-text
      font-weight bold
      font-family 'Montserrat', sans-serif
      font-size 24px
      color #000
      @media(max-width 768px)
        font-size 16px
  &__description
    margin-top 25px
    line-height 150%
    @media(max-width 768px)
      font-size 16px

.about-me
  position relative
  z-index 5
  &__heading
    font-size 48px
    color-adjust #000
    font-weight 800
    line-height 60px
    @media(max-width 768px)
      display none
  &__wrapper
    background-color #fff
    margin-top 50px
    box-sizing border-box
    padding 50px 55px
    border-radius 20px
    display flex
    box-shadow 0px -1px 4px rgba(0, 0, 0, 0.1), 0px 4px 4px rgba(0, 0, 0, 0.25)
    align-items flex-start
    @media(max-width 768px)
      margin-top 0px
      padding 24px 32px
      flex-direction column
  &__photo
    margin 0px 17px
    width 202px
    height 268px
    &-wrapper
      height 268px
      margin-right 45px
      box-shadow 0px 1px 3px rgba(0, 0, 0, 0.2), 0px 2px 1px rgba(0, 0, 0, 0.12), 0px 1px 1px rgba(0, 0, 0, 0.14)
      border-radius 20px
      @media(max-width 992px)
        margin-top 53px
      @media(max-width 770px)
        margin-top 0px
        margin-bottom 20px
  &__subheading
    font-size 24px
    font-weight bold
    line-height 30px
    margin-bottom 20px
  &__text
    line-height 150%
    max-width 722px
.services
  margin-top 130px
  @media(max-width 768px)
    margin-top 50px
  &__heading
    font-size 48px
    color #000
    font-weight 800
    margin-bottom 50px
    @media(max-width 768px)
      margin-bottom 20px
  &__item
    box-sizing border-box
    padding 50px 55px
    cursor pointer
    border-radius 20px
    margin-top 20px
    background-color #fff
    min-height 130px
    position relative
    box-shadow 0px -1px 4px rgba(0, 0, 0, 0.1), 0px 4px 4px rgba(0, 0, 0, 0.25)
    &_active
      & ^[-1]-description
        display block
      & ^[-1]-button
        transform rotate(45deg)
        @media(max-width 768px)
          bottom 17px
          top auto
        &:before, &:after
          background-color #828282
    @media(max-width 768px)
      padding 16px 15px
      padding-right 35px
      min-height auto
    @media(min-width 768px)
      &:hover
        box-shadow 0px 4px 80px rgba(52, 85, 139, 0.5)

    &-button
      position absolute
      right 62px
      width 18px
      height 18px
      transform rotate(-135deg)
      bottom 55px
      cursor pointer
      @media(max-width 768px)
        height 12px
        width 12px
        top calc(50% - 6px)
        right 20px
      &:before
        content ''
        position: absolute;
        width 4px
        height 100%
        background-color #333333
        border-radius 5px
        @media(max-width 768px)
          width 2px
      &:after
        width 100%
        content ''
        height 4px
        border-radius 5px
        background-color #333333
        position absolute
        @media(max-width 768px)
          height 2px
    &-text
      line-height 150%
    &-description
      margin-top 25px
      display none
      box-sizing border-box
      padding-right 40px
      @media(max-width 768px)
        padding-right 15px
      &_active
        display block
    &-subheading
      font-size 24px
      font-weight bold
      line-height 30px
      @media(max-width 768px)
        font-size 18px


.price
  margin-top 130px
  @media(max-width 768px)
    margin-top 50px
  &__heading
    font-size 48px
    font-weight 800
    color #000
  &__description
    font-size 16px
    line-height 150%
    margin-top 70px
    margin-bottom 20px
    @media(max-width 768px)
      margin-top 16px
      margin-bottom 6px
  &__item
    margin-top 10px
    display flex
    border-radius 10px
    @media(max-width 768px)
      margin-top 8px
    & > p
      background #FFFFFF
      box-shadow 0px 4px 10px rgba(52, 85, 139, 0.3)
      line-height 150%
      box-sizing border-box
  &__title
    padding 16px
    padding-right 45px
    width 100%
    border-radius 10px 0px 0px 10px
    margin-right 10px
    @media(max-width 768px)
      font-size 13px
      padding 16px 8px
      line-height 16px
      margin-right 6px
  &__price
    padding 16px 24px
    border-radius 0px 10px 10px 0px
    min-width  150px
    @media(max-width 768px)
      padding 0
      justify-content center
      min-width 90px
      font-size 13px
      display flex
      align-items center
  &__subheading
    font-size 24px
    margin-top 70px
    margin-bottom 10px
    font-weight bold
    @media(max-width 768px)
      margin-top 25px
      font-size 18px
      margin-bottom 8px
.footer
  margin-top 130px
  @media(max-width 768px)
    margin-top 50px
  &__heading
    font-size 48px
    font-weight 800
    margin-bottom 50px
    @media(max-width 768px)
      margin-bottom 15px
  &__wrapper
    margin-top 50px
    max-width 700px
    width 100%
    justify-content space-between
    display flex
    margin-bottom 85px
    @media(max-width 768px)
      margin-top 7px
      margin-bottom 14px
